---
import "../styles/globals.css";
const { title = "TagoIO Snippets", description = "Code snippets for TagoIO Analysis and Payload Parser development" } = Astro.props;
---
<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/tagoio-favicon.png" />

    <!-- Open Graph / Social -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/tago-social-card.png" />
    <meta property="og:image:type" content="image/png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/tago-social-card.png" />
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <slot />
  </body>
</html>
